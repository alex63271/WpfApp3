<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" >
    <Grid>
        <StackPanel>
            <Button Height="50"  Content="Загрузить данные" Click="Button_Click" Margin="307,0,338,0" />
            <Grid Margin="0 0 0 20" Height="215" >

                <DataGrid x:Name="h1" Margin="10,58,10,-66" CanUserAddRows="False"  IsReadOnly="True" RowBackground="#ebebeb"  HeadersVisibility="Column" AutoGenerateColumns="False">
                    <DataGrid.Columns >
                        <DataGridTextColumn x:Name="st1" Header="Федералка" Binding= "{Binding Path= Федералка  }" />

                        <DataGridTextColumn x:Name="st2" Header="Рег. номер" Binding= "{Binding Path= номер}" />

                        <DataGridTextColumn x:Name="st3" Header="ФИО" Binding= "{Binding Path=ФИО}" />
                    </DataGrid.Columns>



                </DataGrid>
            </Grid>

        </StackPanel>
    </Grid>
</Window>
